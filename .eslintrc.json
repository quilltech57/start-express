{
    "root":true,
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base"], 
     "ignorePatterns": ["node_modules /**/*.js"],
	"parserOptions": {
		"ecmaVersion": 12
	},

	"rules": {
        "import/no-unresolved" :"off",
		"no-var": 0,
		"camelcase": "off",
		"no-console": "off",
		"vars-on-top": "off",
		"spaced-comment": "off",
		"consistent-return": "off",
		"func-names": "off",
		"object-shorthand": "off",
		"no-process-exit": "off",
		"no-param-reassign": "off",
		"no-return-await": "off",
		"no-restricted-globals": "off",
		"no-shadow": "off",
		"prefer-const": "off",
		"strict": "off",
		"comma-dangle": "off",
		"lines-around-directive": "off",
		"no-underscore-dangle": "off",
		"class-methods-use-this": "off",
		"no-use-before-define": "off",
		"no-unused-vars": "off"
	}
}
